                </div>
                <div class="form-group  col-sm-11">
                    <label for="SITE_KWD" class="col-lg-2 col-sm-3 control-label">关键字：</label>
                    <div class="col-lg-6 col-sm-8">
                        <textarea  rows="2" type="text" class="form-control" id="" name="" require=""></textarea>
                    </div>
                </div>
                <div class="form-group  col-sm-11">
                    <label for="SITE_DESC" class="col-lg-2 col-sm-3 control-label">描述：</label>
                    <div class="col-lg-6 col-sm-8">
                        <textarea  rows="2" type="text" class="form-control" id="" name="" require=""></textarea>
                    </div>
                </div>
                <div class="col-xs-12">
                    <button type="button" id="btn_save" class="btn btn-info">保存</button>
                </div>
            </div>
        </form>
    </div>
</section>
