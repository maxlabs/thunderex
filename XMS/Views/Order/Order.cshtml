<body>
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
        <li><a href="#">客户管理</a></li>
        <li class="active">代客下单</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="jax-box">
